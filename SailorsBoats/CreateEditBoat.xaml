<Window x:Class="SailorsBoats.CreateEditBoat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SailorsBoats"
        mc:Ignorable="d"
        Title="CreateEditBoat" Height="300" Width="648" ResizeMode="NoResize" Background="LightSkyBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="135*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Label Content="Boat Id" Margin="10" FontSize="14" FontWeight="Bold"/>
        <Label Content="Boat Name" Margin="10" Grid.Row="1" FontSize="14" FontWeight="Bold"/>
        <Label Content="Boat Color" Margin="10" Grid.Row="2" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="BoatId_TextBox" Grid.Column="1" Margin="10,16,10,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="BoatName_TextBox" Grid.Column="1" Margin="10,16,10,0" Grid.Row="1" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="Save_Button" Content="Save" Grid.Column="1" Margin="80,15,76,0" Grid.Row="4" Height="20" VerticalAlignment="Top" Grid.ColumnSpan="2" Click="Save_Button_Click"/>
        <RadioButton Name="BoatColor_RadioButton1" GroupName="BoatColor_TextBox" Content="Red" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton Name="BoatColor_RadioButton2" GroupName="BoatColor_TextBox" Content="Blue" Grid.Column="1" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton Name="BoatColor_RadioButton3" GroupName="BoatColor_TextBox" Content="Green" Grid.Column="1" HorizontalAlignment="Left" Margin="10,50,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton Name="BoatColor_RadioButton4" GroupName="BoatColor_TextBox" Content="Orange" Grid.Column="1" HorizontalAlignment="Left" Margin="80,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton Name="BoatColor_RadioButton5" GroupName="BoatColor_TextBox" Content="Black" Grid.Column="1" HorizontalAlignment="Left" Margin="80,30,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <RadioButton Name="BoatColor_RadioButton6" GroupName="BoatColor_TextBox" Content="Purple" Grid.Column="1" HorizontalAlignment="Left" Margin="80,50,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="184" Margin="10,10,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="222" Source="Asserts/sailboat-512.png"/>

    </Grid>
</Window>
